<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="89.0" fitWidth="101.0" layoutX="144.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/icons/lock_icon.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="48.0" fitWidth="76.0" layoutX="38.0" layoutY="132.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/icons/man_icon.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="54.0" fitWidth="54.0" layoutX="38.0" layoutY="227.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/icons/key_icon.png" />
         </image>
      </ImageView>
      <TextField fx:id="username" layoutX="111.0" layoutY="139.0" prefHeight="34.0" prefWidth="242.0" promptText="Username" />
      <PasswordField fx:id="password" layoutX="110.0" layoutY="237.0" prefHeight="34.0" prefWidth="242.0" promptText="Password" />
