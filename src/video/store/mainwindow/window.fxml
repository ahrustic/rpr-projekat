<AnchorPane fx:id="pane" prefHeight="450.0" prefWidth="555.0" xmlns="http://javafx.com/javafx/10.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="26.0" prefWidth="554.0">
         <children>
            <MenuBar prefHeight="26.0" prefWidth="585.0">
              <menus>
                <Menu mnemonicParsing="false" text="Menu">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Dodaj admina" />
                    <MenuItem mnemonicParsing="false" onAction="#clickCancel" text="Close" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Zaduzenja">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#listaZaduzenja" text="Otvori listu" />
                        <MenuItem mnemonicParsing="false" onAction="#actionDodajZaduzenje" text="Dodaj" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Film">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#listaFilmova" text="Otvori listu" />
                    <MenuItem mnemonicParsing="false" onAction="#actionDodajFilm" text="Dodaj " />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Clan">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#listaClanova" text="Otvori listu" />
                      <MenuItem mnemonicParsing="false" onAction="#actionDodajClan" text="Dodaj" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="About">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
      <Button fx:id="zaduzenjeBtn" layoutX="25.0" layoutY="86.0" mnemonicParsing="false" onAction="#actionDodajZaduzenje" prefHeight="78.0" prefWidth="153.0" styleClass="login-button" text="Dodaj zaduzenje" />
      <Button fx:id="filmBtn" layoutX="408.0" layoutY="80.0" mnemonicParsing="false" onAction="#actionDodajFilm" prefHeight="78.0" prefWidth="122.0" styleClass="login-button" text="Dodaj film" />
      <Button fx:id="clanBtn" layoutX="219.0" layoutY="41.0" mnemonicParsing="false" onAction="#actionDodajClan" prefHeight="78.0" prefWidth="122.0" styleClass="login-button" text="Dodaj clana" />
      <Button fx:id="issuedBtn" layoutX="32.0" layoutY="287.0" mnemonicParsing="false" onAction="#listaZaduzenja" prefHeight="78.0" prefWidth="122.0" styleClass="login-button" text="Zaduzenja" />
      <Button fx:id="moviesBtn" layoutX="408.0" layoutY="287.0" mnemonicParsing="false" onAction="#listaFilmova" prefHeight="78.0" prefWidth="122.0" styleClass="login-button" text="Filmovi" />
      <Button fx:id="membersBtn" layoutX="219.0" layoutY="326.0" mnemonicParsing="false" onAction="#listaClanova" prefHeight="78.0" prefWidth="122.0" styleClass="login-button" text="Clanovi" />
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="180.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/icons/welcome.jpg" />
         </image>
      </ImageView>
   </children>
    <stylesheets>
        <URL value="@/css/theme.css" />
    </stylesheets>
</AnchorPane>
